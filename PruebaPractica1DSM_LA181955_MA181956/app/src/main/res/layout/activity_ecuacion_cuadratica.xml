<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C77C3"
    android:padding="25dp"
    tools:context=".EcuacionCuadraticaActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="10sp"
        android:text="Cálculo de raíces de ecuación cuadrática"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:fontFamily="@font/roboto_regular"
        android:text="Ingrese los coeficientes del polinomio:"
        android:textAlignment="center"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        app:srcCompat="@drawable/ecuacion" />

    <TextView
        android:id="@+id/txtA"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210sp"
        android:fontFamily="@font/roboto_regular"
        android:text="A:"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtB"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210sp"
        android:fontFamily="@font/roboto_regular"
        android:text="B:"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtC"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="210sp"
        android:fontFamily="@font/roboto_regular"
        android:text="C:"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtNumberA"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230sp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:inputType="numberSigned|number|numberDecimal" />

    <EditText
        android:id="@+id/txtNumberB"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230sp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:inputType="numberSigned|number|numberDecimal" />

    <EditText
        android:id="@+id/txtNumberC"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="230sp"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:inputType="numberSigned|number|numberDecimal" />

    <TextView
        android:id="@+id/textoRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="355sp"
        android:fontFamily="@font/roboto_regular"
        android:text="Resultados:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtResX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390sp"
        android:fontFamily="@font/roboto_regular"
        android:text="X1:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtResX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420sp"
        android:fontFamily="@font/roboto_regular"
        android:text="X2:"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCalcular"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290sp"
        android:backgroundTint="#39A9DB"
        android:backgroundTintMode="add"
        android:text="Calcular"
        android:textColor="#f2f2f2"
        android:textSize="17sp" />
</RelativeLayout>
